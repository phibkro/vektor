---
import { Image } from "astro:assets";

import Meta from "src/layouts/Meta.astro";
import Page from "src/layouts/Page.astro";

import vektorForsidebilde from "@images/vektor-forsidebilde.png";
import Abelprisen from "@images/sponsor/Abelprisen.png";
import KSBergen from "@images/sponsor/KSBergen.png";
import SparebankstiftelsenDNB from "@images/sponsor/SparebankstiftelsenDNB.png";
import Tekna from "@images/sponsor/Tekna.png";
import UiB from "@images/sponsor/UIB.png";
import VisionTech from "@images/sponsor/VisionTech.png";
import NTNUIE from "@images/sponsor/NTNUIE.png";
import NTNUIV from "@images/sponsor/NTNUIV.png";
import Samarbeidsforum from "@images/sponsor/SamarbeidsForum.png";
import Matematikksenteret from "@images/sponsor/Matematikksenteret.png";

interface Card {
	// Props
	number: number;
	title: string;
	text: string;
	route: {
		pathname: string;
		text: string;
	};
}

const cards: Card[] = [
	{
		number: 2218,
		title: "Assistenter",
		text: "Over 2218 studenter har hatt et verv som vektorassistent i Vektorprogrammet",
		route: {
			pathname: "/assistenter",
			text: "Les mer om assistenter",
		},
	},
	{
		number: 608,
		title: "I team",
		text: "Over 608 studenter har hatt et verv i et av Vektorprogrammets mange team",
		route: {
			pathname: "/team",
			text: "Les mer om verv i team",
		},
	},
];
---

<Meta title="Vektor">
	<Page>
		<main>
			{/* Use component when the rendered component needs no props */}
			{/* Getting the routes from the defined route file in pages */}
			<div class="bg-vektor-index-blue md:flex">
				{/*Upper start*/}
				<div class="w-full md:w-1/2 h-[29rem] md:h-[26rem] lg:h-[31rem] xl:h-[35rem] md:p-8 text-center">
					<h1 class="pt-20 md:p-0 font-bold text-4xl visible md:hidden mx-auto">
						Vektorprogrammet
					</h1>
					<Image
						class="pt-10 md:pt-0 mx-auto my-auto md:ml-auto md:mr-0 h-full"
						src={vektorForsidebilde}
						width={801}
						height={765}
						alt="Vektorprogrammet"
					/>
				</div>
				<div class="mt-16 w-full md:w-1/2 p-10 md:mr-auto md:mt-24 md:text-left text-center">
					<h1 class="hidden md:block text-4xl font-bold mb-4">
						Vektorprogrammet
					</h1>
					<div class="mt-6 mb-4 flex md:block justify-center">
						<p class="text-xl text-left w-4/5">
							- sender studenter til ungdomsskoler for å hjelpe til som lærerens
							assistent i matematikkundervisningen
						</p>
					</div>
					<button type="button" class="btn btn-success">
						LES MER OG BLI ASSISTENT
					</button>
				</div>
			</div>
			{/*Upper end*/}
			<div class="info-background flex flex-row text-center w-full justify-center gap-40 pt-72 pb-72 mt-20 mb-20">
				{/*Middle start*/}
				{cards.map(({ number, title, text, route }) => (
					<div class="flex flex-col gap-5 text-accent">
						<div>
							{/* <VisibilitySensor partialVisibility>
								{({ isVisible }: { isVisible: boolean }) => (
									<div class="font-bold text-4xl">
										{isVisible ? (
											<CountUp end={number} duration={4} separator="" />
										) : (
											0
										)}
									</div>
								)}
							</VisibilitySensor> */}
							<p class="text-2xl">{title}</p>
						</div>
						<p class="text-lg max-w-96">{text}</p>
						<div>
							{/* <Link
								class="btn btn-accent text-secondary w-fit"
								to={route.pathname}
							>
								{route.text}
							</Link> */}
						</div>
					</div>
				))}
			</div>
			{/*Middle end*/}
			<div class="mt-32 mb-32">
				<div class="text-center font-bold">
					<h1 class="text-4xl">Hovedsponsorer</h1>
				</div>
				<div class="flex mx-96 mt-12">
					<div class="w-1/2 h-28">
						<Image
							class="h-full m-auto"
							src={Abelprisen}
							width={546}
							height={167}
							alt="Abelprisen"
						/>
					</div>
					<div class="w-1/2 h-28">
						<Image
							class="h-full m-auto"
							src={SparebankstiftelsenDNB}
							width={1820}
							height={1580}
							alt="Sparebankstiftelsen DNB"
						/>
					</div>
				</div>
				<div class="text-center mt-32 font-bold">
					<h1 class="text-4xl">Sponsorer og samarbeidspartnere</h1>
				</div>
				<div class="flex mx-96 mt-12">
					<div class="w-1/2 h-28">
						<Image 
							class="h-full m-auto p-4" 
							src={Tekna} 
							width={528}
							height={200}
							alt="Tekna" 
						/>
					</div>
					<div class="w-1/2 h-28">
						<Image
							class="m-auto p-4"
							src={NTNUIV}
							width={1041}
							height={240}
							alt="NTNU - Fakultet for ingeniørvitenskap"
						/>
					</div>
				</div>
				<div class="flex mx-96 mt-12">
					<div class="w-1/2 h-28">
						<Image
							class=" m-auto p-4"
							src={NTNUIE}
							width={879}
							height={284}
							alt="NTNU - Fakultet for informasjonsteknologi og elektronikk"
						/>
					</div>
					<div class="w-1/2 h-28">
						<Image
							class="h-full m-auto p-4"
							src={Samarbeidsforum}
							width={1000}
							height={420}
							alt="Samarbeidsforum"
						/>
					</div>
				</div>
				<div class="flex mx-96 mt-12">
					<div class="w-1/2 h-28">
						<Image
							class="h-full m-auto p-4"
							src={UiB}
							width={1700}
							height={383}
							alt="Universitetet i Bergen - Det matematisk-naturvitenskapelige fakultet"
						/>
					</div>
					<div class="w-1/2 h-28">
						<Image
							class="h-full m-auto p-4"
							src={Matematikksenteret}
							width={570}
							height={200}
							alt="Matematikksenteret"
						/>
					</div>
				</div>
				<div class="flex mx-96 mt-12">
					<div class="w-1/2 h-28">
						<Image
							class="h-full m-auto p-4"
							src={VisionTech}
							width={824}
							height={212}
							alt="VisionTech"
						/>
					</div>
					<div class="w-1/2 h-28">
						<Image
							class="h-full m-auto p-4"
							src={KSBergen}
							width={3027}
							height={1019}
							alt="Kulturstyret Bergen"
						/>
					</div>
				</div>
			</div>
		</main>
	</Page>
</Meta>
